<style>
  .reset_password_container{
    text-align: center;
    margin-top: {{section.settings.main_reset_password_margin_top| times: 0.5 | round: 0}}px;
    margin-bottom: {{section.settings.main_reset_password_margin_bottom| times: 0.5 | round: 0}}px;
  }
  @media screen and (min-width: 768px) {
    .reset_password_container{
      margin-top: {{section.settings.main_reset_password_margin_top}}px;
      margin-bottom: {{section.settings.main_reset_password_margin_bottom}}px;
    }
  }
</style>
<section class="reset_password_container">
  <div class="customer_form">
    <h1>Reset account password</h1>
    <p>Enter a new password</p>
    {%- form 'reset_customer_password' -%}
      {{ form.errors | default_errors }}

      <div class="password">
        <input
          type="password"
          name="customer[password]"
          id="password"
          placeholder="Password"
        >
      </div>

      <div class="password_confirm">
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          placeholder="Confirm password"
        >
      </div>

      <button class="register_submit">Reset password</button>
    {%- endform -%}
  </div>
</section>
{% schema %}
{
  "name": "Reset Password",
  "settings": [
    {
      "type": "header",
      "content": "Section margin"
    },
    {
      "type": "range",
      "id": "main_reset_password_margin_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top margin",
      "default": 45
    },
    {
      "type": "range",
      "id": "main_reset_password_margin_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom margin",
      "default": 45
    }
  ],
  "presets": [
    {
      "name": "Reset Password"
    }
  ]
}
{% endschema %}
