<style>
  .footer{
    background-color: var(--secondary-background);
    padding-block: 2rem;
    margin-top: {{section.settings.footer_top_margin| times: 0.5 | round: 0}}px;
  }
  @media screen and (min-width: 768px) {
    .footer {
      padding-block: 4rem;
      margin-top: {{section.settings.footer_top_margin}}px;
    }
  }
  .footer_container{
    display: grid;
    grid-template-columns: 1fr;
    text-align: center;
  }
  .footer_container > * {
    margin-bottom: 2rem;
  }
  @media screen and (min-width: 768px) {
    .footer_container{
      grid-template-columns: repeat(3,1fr);
    }
    .footer_container > * {
      margin-bottom: 0;
    }
  }
  @media screen and (min-width: 768px) {
    .footer_container .brand{
      text-align: left;
    }
    .footer_container .menu_links{
      text-align: center;

    }
    .footer_container .newsLetterForm_container{
      text-align: right;
    }
  }
  @media screen and (min-width: 768px) {
    .footer_container .brand > *{
       margin-top: 2rem;
    }
    .footer_container .menu_links ul {
    margin-top: 1rem;
    }
  }
  .newsletter_form_field_wrapper p{
    margin-bottom: 2rem;
  }
  .newsletter_form_field_wrapper input{
    outline: none;
    padding: 1rem;
    border: none;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    border-radius: 0.5rem;
  }
  @media screen and (max-width: 768px) {
    .newsletter_form_field_wrapper button{
      margin-top: 0;
    }
  }
</style>
<footer class="footer">
  <div class="footer_container">
    <div class="brand">
      <a href="{{ routes.root_url }}">
        {%- if settings.logo != blank -%}
          <div>
            {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
            {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
            {% capture widths %}
            {{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
            {{
              settings.logo
              | image_url: width: 600
              | image_tag: widths: widths, height: logo_height, width: settings.logo_width, alt: logo_alt, preload: true
            }}
          </div>
        {%- else -%}
          <span class="h2">{{ shop.name }}</span>
        {%- endif -%}
      </a>
      <p class="slogan">{{ section.settings.footer_slogan }}</p>
    </div>
    <div class="menu_links">
      <p class="h3">Links</p>
      <ul>
        <li>
          {%- for link in section.settings.menu.links -%}
            <a href="{{ link.url }}" class="hover-line">
              <span>
                {{- link.title | escape -}}
              </span>
            </a>
          {%- endfor -%}
        </li>
      </ul>
    </div>
    <div class="newsletter_form_field_wrapper">
      <p class="h3">Subscribe to our emails</p>
      {% form 'customer' %}
        <input
          type="email"
          name="contact[email]"
          class="field_input"
          value="{{ form.email }}"
          aria-required="true"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          placeholder="Enter your email"
          required
        >
        <button
          type="submit"
          class="btn newsletter_form_button"
          name="commit"
        >
          Submit
        </button>
      {% endform %}
    </div>
  </div>
</footer>
{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "footer_slogan",
      "label": "Footer slogan",
      "default": "High quality premium & timeless clothing for every men with affordable price."
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "footer",
      "label": "Menu"
    },
    {
      "type": "header",
      "content": "Section margin"
    },
    {
      "type": "range",
      "id": "footer_top_margin",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top margin",
      "default": 45
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
