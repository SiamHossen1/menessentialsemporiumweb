          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "label": "Heading",
          "default": "Slide heading"
        },
        {
          "type": "inline_richtext",
          "id": "text",
          "label": "Text",
          "default": "Text from here describes your slide"
        },
        {
          "type": "header",
          "content": "Button options"
        },
        {
          "type": "text",
          "id": "btn_label",
          "default": "See more",
          "label": "Label"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "Link"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "Slide"
        }
      ]
    }
  ]
}
{% endschema %}
